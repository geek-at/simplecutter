{
  "name": "dta-cutter",
  "version": "2.0.2",
  "description": "A simple video cutter for gaming clips with multi-segment support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --linux && electron-builder --win -c.win.target=zip",
    "dist:win": "electron-builder --win -c.win.target=zip",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder --linux && electron-builder --win -c.win.target=zip"
  },
  "keywords": [
    "ffmpeg",
    "video",
    "cutter",
    "gaming"
  ],
  "author": {
    "name": "Haschek Solutions",
    "email": "info@haschek.solutions"
  },
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "fluent-ffmpeg": "^2.1.3",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@ffmpeg-installer/ffmpeg": "^1.1.0"
  },
  "build": {
    "appId": "hascheksolutions.ffmpeg",
    "productName": "DTA Cutter",
    "copyright": "Copyright Â© 2024 Haschek Solutions",
    "extraResources": [
      {
        "from": "ffmpeg",
        "to": "ffmpeg",
        "filter": ["**/*"]
      }
    ],
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "js/**/*",
      "css/**/*",
      "fonts/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "category": "public.app-category.video",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Video",
      "icon": "build/"
    },
    "publish": {
      "provider": "github",
      "owner": "geek-at",
      "repo": "simplecutter"
    }
  }
}
